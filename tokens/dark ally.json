{
  "app": {
    "color": {
      "component": {
        "primary": {
          "bg": {
            "solid": {
              "type": "color",
              "value": "hsl({config.color.primary.hue}, {config.color.primary.saturation}, 65%)"
            },
            "translucent": {
              "type": "color",
              "value": "hsla({config.color.primary.hue}, {config.color.primary.saturation}, 40%, {app.modifier.color.primary.translucent.default})"
            }
          },
          "border": {
            "solid": {
              "type": "color",
              "value": "hsl({config.color.primary.hue}, {config.color.primary.saturation}, 60%)"
            },
            "translucent": {
              "type": "color",
              "value": "hsla({config.color.primary.hue}, {config.color.primary.saturation}, 40%, {app.modifier.color.primary.translucent.default})"
            }
          },
          "fg": {
            "solid": {
              "type": "color",
              "value": "hsl({config.color.primary.hue}, {config.color.primary.saturation}, 65%)"
            },
            "onTranslucent": {
              "type": "color",
              "value": "hsl({config.color.primary.hue}, {config.color.primary.saturation}, 85%)"
            }
          }
        },
        "secondary": {
          "bg": {
            "solid": {
              "type": "color",
              "value": "hsl({config.color.secondary.hue}, {config.color.secondary.saturation}, 80%)"
            },
            "translucent": {
              "type": "color",
              "value": "hsla({config.color.secondary.hue}, {config.color.secondary.saturation}, 40%, {app.modifier.color.secondary.translucent.default})"
            }
          },
          "border": {
            "solid": {
              "type": "color",
              "value": "hsl({config.color.secondary.hue}, {config.color.secondary.saturation}, 85%)"
            },
            "translucent": {
              "type": "color",
              "value": "hsla({config.color.secondary.hue}, {config.color.secondary.saturation}, 40%, {app.modifier.color.secondary.translucent.default})"
            }
          },
          "fg": {
            "solid": {
              "type": "color",
              "value": "hsl({config.color.secondary.hue}, {config.color.secondary.saturation}, 75%)"
            },
            "onTranslucent": {
              "type": "color",
              "value": "hsl({config.color.secondary.hue}, {config.color.secondary.saturation}, 85%)"
            }
          }
        }
      }
    },
    "typography": {
      "control": {
        "text": {
          "sm": {
            "value": {
              "fontFamily": "{config.typography.control.text.fontFamily}",
              "fontWeight": "{config.typography.control.text.fontWeight}",
              "lineHeight": "{config.typography.control.text.lineHeight}",
              "fontSize": "{config.typography.control.text.fontSize} - 0.125rem"
            },
            "type": "typography"
          },
          "md": {
            "value": {
              "fontFamily": "{config.typography.control.text.fontFamily}",
              "fontWeight": "{config.typography.control.text.fontWeight}",
              "lineHeight": "{config.typography.control.text.lineHeight}",
              "fontSize": "{config.typography.control.text.fontSize}"
            },
            "type": "typography"
          },
          "lg": {
            "value": {
              "fontFamily": "{config.typography.control.text.fontFamily}",
              "fontWeight": "{config.typography.control.text.fontWeight}",
              "lineHeight": "{config.typography.control.text.lineHeight}",
              "fontSize": "{config.typography.control.text.fontSize} + 0.125rem"
            },
            "type": "typography"
          }
        }
      }
    }
  }
}